<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <layer-list>
            <item android:width="30dp" android:height="30dp">
                <shape android:shape="oval">
                    <!--                    <solid android:color="#b3536673"></solid>-->
                </shape>
            </item>
            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape>
                    <!--                    <size android:height="30dp" android:width="30dp"></size>-->
                    <solid android:color="#ffffff" />
                    <corners android:radius="15dp" />
                    <stroke android:width="1dp" android:color="#b3ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:width="30dp" android:height="30dp">
                <shape>
                    <!--                    <solid android:color="#b3536673"></solid>-->
                </shape>
            </item>

            <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="#ffffff"></solid>
                    <corners android:radius="15dp"></corners>
                    <stroke android:width="1dp" android:color="#b3ffffff"></stroke>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>